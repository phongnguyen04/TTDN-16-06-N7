<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_room_meeting_tree" model="ir.ui.view">
        <field name="name">room.meeting.tree</field>
        <field name="model">room.meeting</field>
        <field name="arch" type="xml">
            <tree string="Danh sách phòng họp">
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="asset_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_room_meeting_form" model="ir.ui.view">
        <field name="name">room.meeting.form</field>
        <field name="model">room.meeting</field>
        <field name="arch" type="xml">
            <form string="Thông tin phòng họp">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Tên phòng họp"/>
                        <h1>
                            <field name="name" placeholder="Ví dụ: Phòng họp Lotus"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location" placeholder="Ví dụ: Tầng 2, Khu A"/>
                            <field name="capacity"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Trang thiết bị trong phòng" name="assets">
                            <field name="asset_ids" widget="many2many_tags"/>
                            <p class="text-muted">
                                * Chọn các thiết bị (máy chiếu, tivi, micro...) đang được đặt cố định tại phòng này.
                            </p>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_room_meeting" model="ir.actions.act_window">
        <field name="name">Cấu hình Phòng họp</field>
        <field name="res_model">room.meeting</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có phòng họp nào. Hãy tạo mới ngay!
            </p>
        </field>
    </record>
    <menuitem id="menu_room_root" 
              name="Quản lý Phòng họp" 
              sequence="10"/>

    <menuitem id="menu_room_config" 
              name="Danh mục Phòng họp" 
              parent="menu_room_root" 
              action="action_room_meeting" 
              sequence="20"/>
</odoo>